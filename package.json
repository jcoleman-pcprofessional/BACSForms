{
  "name": "bacs-forms",
  "productName": "BACS Forms",
  "description": "BACS Form Management Application",
  "version": "0.1.6",
  "private": true,
  "author": "Jeremy Coleman",
  "copyright": "Â© 2018, JC",
  "homepage": "http://pcprofessional.com",
  "main": "app/background.js",
  "build": {
    "appId": "com.pcprofessional.bacs-forms",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "extraResources": [
      {
        "from": "./PDFTK",
        "to": "PDFTK",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "jcoleman-pcprofessional",
        "repo": "BACSForms"
      }
    ],
    "win": {
      "certificateFile": "codesign.pfx",
      "publisherName": "Jeremy"
    }
  },
  "respository": "https://github.com/jcoleman-pcprofessional/BACSForms",
  "scripts": {
    "postinstall": "electron-builder install-app-deps && copy_pdftk.cmd",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "release": "git-updater.cmd && npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder --publish always"
  },
  "dependencies": {
    "electron-updater": "^3.2.3",
    "fill-pdf": "^1.1.0",
    "fs-jetpack": "^2.1.0",
    "ftp": "^0.3.10",
    "node-gyp": "^3.8.0",
    "pdf-parse": "^1.1.1",
    "pdf2json": "^1.1.7",
    "pdfreader": "^0.2.5",
    "sqlite3": "^4.0.4",
    "windows": "0.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "babel-loader": "^8.0.0-beta.4",
    "babel-plugin-transform-object-rest-spread": "^7.0.0-beta.3",
    "chai": "^4.1.0",
    "css-loader": "^1.0.0",
    "electron": "^2.0.8",
    "electron-builder": "^20.15.1",
    "electron-mocha": "^6.0.4",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mocha": "^5.2.0",
    "source-map-support": "^0.5.6",
    "spectron": "^3.8.0",
    "style-loader": "^0.21.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.4",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  }
}
